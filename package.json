{
  "name": "django-base-site",
  "description": "Django Base Site",
  "scripts": {
    "dev": "vite --config src/config/vite.config.js",
    "build": "vite build --config src/config/vite.config.js",
    "preview": "vite preview --config src/config/vite.config.js",
    "lint-sass": "npx stylelint --config src/config/stylelint.config.js ./src/scss/",
    "format-sass": "npx stylelint --config src/config/stylelint.config.js --fix 'src/**/*.{css,scss}'",
    "lint-js": "npx eslint --config src/config/eslint.config.js ./src/js",
    "format-js": "npx eslint --config src/config/eslint.config.js --fix ./src/js"
  },
  "devDependencies": {
    "@popperjs/core": "^2.11.6",
    "bootstrap": "^5.3.0-alpha1",
    "eslint-config-airbnb-base": "^15.0.0",
    "sass": "^1.59.2",
    "stylelint": "^14.16.1",
    "stylelint-config-recess-order": "^3.1.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-scss": "^4.4.0",
    "vite": "^4.1.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/epicserve/django-base-site.git"
  },
  "author": "Brent O'Connor",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/epicserve/django-base-site/issues"
  },
  "homepage": "https://github.com/epicserve/django-base-site#readme"
}
